rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /signals/{signalId} {
      // Allow public read of signals
      allow read: if true;
      // Allow anyone to create a signal.
      // TODO: Secure this endpoint in the future if user accounts are added.
      allow create: if true;
    }
    // Deny all other reads/writes by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
