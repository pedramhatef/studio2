rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // For this example, we'll allow anyone to read the signals.
    // In a real application, you would want to restrict this.
    match /signals/{signalId} {
      allow read: if true;
      allow write: if false; // Disallow client-side writes for security.
    }

    // Allow users to write to their own data, but not others.
    // This is just an example for future use.
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
